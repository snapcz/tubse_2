<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_above="@id/tv_shooter"
        android:textStyle="bold"
        android:text="WOMBAT"
        android:textSize="24dp"
        android:id="@+id/wombat"
        android:textColor="@android:color/black"
        android:fontFamily="@font/custom_font"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_above="@id/empty1"
        android:textStyle="bold"
        android:text="SHOOTER"
        android:textSize="24dp"
        android:id="@+id/tv_shooter"
        android:textColor="@android:color/black"
        android:fontFamily="@font/custom_font"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_above="@id/new_game"
        android:id="@+id/empty1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#9003dffc"
        android:text="NEW GAME"
        android:id="@+id/new_game"/>

    <Button
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_game"
        android:background="#9003dffc"
        android:id="@+id/high_score"
        android:text="HIGH SCORE"/>

</RelativeLayout>